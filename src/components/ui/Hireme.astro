<script>
    function DevidedText() {
        const MainText = document.getElementById(
            "splitted-text",
        ) as HTMLElement;

        if (MainText) {
            const text = MainText.textContent || "";

            const splittedText = Array.from(text);

            MainText.innerHTML = "";

            splittedText.forEach((letter: any, index: number) => {
                const span = document.createElement("span");
                span.classList.add("letter-wrapper");
                span.innerHTML = letter;

                MainText.appendChild(span);
            });
        }
    }
    DevidedText();
</script>

