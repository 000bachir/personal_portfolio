<script>

    function ApplyingColors(){
        let TechStack = document.querySelectorAll(".tech") as NodeListOf<HTMLElement> ;
            let bars = document.querySelectorAll(".bar") as NodeListOf<HTMLElement>
        if(!TechStack.length && !bars.length){
            console.error("error  elements have not been found");
            return
        }
        let stackColors:string[] = [
            "#E34F26", // HTML (Orange-red)
            "#1572B6", // CSS (Blue)
            "#F7DF1E", // JavaScript (Yellow)
            "#3178C6", // TypeScript (Blue)
            "#339933", // Node.js (Green)
            "#FFF", // Deno (Yellow-black gradient, approximated to Yellow)
            "#FF3E00", // SvelteKit (Orange)
            "#FF5A03", // Astro (Light orange)
            "#000000", // Next.js (Black)
            "#4479A1", // SQL (Blue-gray)
            "#00ADD8", // Go (Teal)
            "#3776AB", // Python (Blue)
            "#3ECF8E", // Supabase (Green)
            "#FFCA28"  // Firebase (Yellow)
        ];
        TechStack.forEach((tech : HTMLElement , index:number)=>{
            let color = stackColors[index % stackColors.length]
            tech.style.color = color
        })
        bars.forEach((bar : HTMLElement , index : number)=>{
            let barColor = stackColors[index % stackColors.length]
            bar.style.background = barColor
        })
    }
    ApplyingColors();
</script>

